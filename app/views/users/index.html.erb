<div class="right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>
              Users
              <small>
                  HR Payroll
              </small>
          </h3>
      </div>

      <div class="title_right">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Search for...">
            <span class="input-group-btn">
                      <button class="btn btn-default" type="button">Go!</button>
                  </span>
          </div>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  </div>
  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>User List</h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
            </li>
            <li>
              <%= link_to root_path do %>
                <i class="fa fa-close"></i>
              <% end %>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <p class="text-muted font-13 m-b-30">
            All users of payroll management system.
          </p>
          <table id="datatable-buttons" class="table table-striped table-bordered">
            <thead>
              <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Job Title</th>
                <th>Role</th>
                <th>Joining Date</th>
                <th>Left Date</th>
                <th>Last Signed</th>
                <th>Action</th>
              </tr>
            </thead>


            <tbody>
              <%@users.each do |user|%>
                <tr>
                  <td><%=user.full_name%></td>
                  <td><%=user.email%></td>
                  <td><%=user.job_title%></td>
                  <td><%=user.role_id%></td>
                  <td><%=user.date_joined%></td>
                  <td><%=user.date_left.present? ? user.date_left : "N/A"%></td>
                  <td><%=user.last_signed_in.present? ? user.last_signed_in.localtime.strftime("%m/%d/%Y %I:%M%p") : "N/A" %></td>
                  <th>
                    <%if current_user.is_admin? || current_user.is_manager?%>
                      <%= link_to user_path(user), title:"Edit" do %>
                        <i class="fa fa-user"></i>
                      <% end %>
                    <%end%>
                    <%if current_user.is_admin? %>
                      <%= link_to edit_user_path(user), title:"Show" do %>
                        <i class="fa fa-edit"></i>
                      <% end %>
                      <%= link_to user_path(user), method: :delete, data: {confirm: "Are you sure?"}, title:"Delete" do %>
                        <i class="fa fa-trash"></i>
                      <% end %>
                    <%end%>
                  </th>
                </tr>
              <%end%>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>



<script>
  var handleDataTableButtons = function() {
      "use strict";
      0 !== $("#datatable-buttons").length && $("#datatable-buttons").DataTable({
        dom: "Bfrtip",
        buttons: [{
          extend: "copy",
          className: "btn-sm"
        }, {
          extend: "csv",
          className: "btn-sm"
        }, {
          extend: "excel",
          className: "btn-sm"
        }, {
          extend: "pdf",
          className: "btn-sm"
        }, {
          extend: "print",
          className: "btn-sm"
        }],
        responsive: !0
      })
    },
    TableManageButtons = function() {
      "use strict";
      return {
        init: function() {
          handleDataTableButtons()
        }
      }
    }();
</script>
<script type="text/javascript">
  $(document).ready(function() {
    $('#datatable').dataTable();
    $('#datatable-keytable').DataTable({
      keys: true
    });
    $('#datatable-responsive').DataTable();
    $('#datatable-scroller').DataTable({
      ajax: "js/datatables/json/scroller-demo.json",
      deferRender: true,
      scrollY: 380,
      scrollCollapse: true,
      scroller: true
    });
    var table = $('#datatable-fixed-header').DataTable({
      fixedHeader: true
    });
  });
  TableManageButtons.init();
</script>